<%- include('partials/navbar.ejs') %>

<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">
        <h5 class="font-weight-bold mb-3 text-center text-lg-start">Member</h5>
        <% users.map(function(user){ %>
        <div class="card">
          <div class="card-body">
            <ul class="list-unstyled mb-0">
              <li class="p-2 border-bottom" style="background-color: #eee;">
                <a href="chat?id=<%= user.id %>" class="d-flex justify-content-between chat-link">
                  <div class="d-flex flex-row">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-8.webp" alt="avatar"
                      class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">
                    <div class="pt-1">
                      <p class="fw-bold mb-0"><%= user.username %></p>
                      <p class="small text-muted">Hello, Are you there?</p>
                    </div>
                  </div>
                  <div class="pt-1">
                    <p class="small text-muted mb-1">Just now</p>
                    <span class="badge bg-danger float-end">1</span>
                  </div>
                </a>
              </li>
            </ul>
          </div>
        </div>
        <%}) %>
      </div>
      <div class="col-md-6 col-lg-7 col-xl-8">
        <h2 id="chat-header">
          Brad Pitt
        </h2>
        <ul class="list-unstyled" id="chat-lists">
        </ul>
        <!-- FORM MESSGAE -->
        <div class="bg-white mb-3">
          <form action="" id="message-form">
            <div class="form-outline">
              <textarea class="form-control" id="message-field" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-info btn-rounded float-end">Send</button>
          </form>
        </div>

      </div>
    </div>
  </div>
</section>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
  const chatList = document.getElementById('chat-lists')
  const socket = io('http://localhost:3002/', {
    query: {
      token: sessionStorage.getItem('token')
    }
  })

  let recieveChatCard = document.getElementById('chat-message')

  socket.on('messages', (data) => {
    // chatList.innerHTML = ''
    chatList.innerHTML += `
          <li class="d-flex justify-content-between mb-4">
            <div class="card">
              <div class="card-header d-flex justify-content-between p-3">
                <p class="fw-bold mb-0">Brad Pitt</p>
              </div>
              <div class="card-body">
                <p class="mb-0" id="chat-message">${data.data}</p>
              </div>
            </div>
          </li>
          `
    console.log(data.data)
  })

  fetch('http://localhost:3002/api/chat', {
    headers: {
      'token': sessionStorage.getItem('token')
    }
  }).then(async (res) => {
    const response = await res.json()
    console.log(response)
  }).catch((error) => {
    console.log(error)
  })

  $(document).ready(function () {
    var recieverData;
    $('.chat-link').on('click', function (e) {
      e.preventDefault()
      let token = sessionStorage.getItem('token').toString()
      const link = $(this).attr('href')
      console.log(link)
      fetch(`http://localhost:3002/api/${link}`, {
        headers: {
          'token': token
        }
      }).then(async (res) => {
        const data = await res.json()
        const message = data.messages
        if (message.length > 0) {
          message.map(function (value) {
              chatList.innerHTML += `
          <li class="d-flex justify-content-between mb-4">
            <div class="card">
              <div class="card-header d-flex justify-content-between p-3">
                <p class="fw-bold mb-0">Brad Pitt</p>
              </div>
              <div class="card-body">
                <p class="mb-0" id="chat-message">${value.message}</p>
              </div>
            </div>
          </li>
          `
          })
        } else {
          chatList.innerHTML = ''
        }
        
        
        console.log(data)
        recieverData = data.user

        let chatHeader = document.getElementById('chat-header')
        chatHeader.innerHTML = recieverData.username
        console.log(recieverData)
      }).catch((e) => {
        console.error(e)
      })
    })

    $('#message-form').on('submit', (e) => {
      e.preventDefault()
      const message = $('#message-field').val()
      const data = {
        to: recieverData.id,
        message: message
      }
      socket.emit('sendmessage', data)
      document.getElementById('message-field').value = ''
    })
  })
  

</script>